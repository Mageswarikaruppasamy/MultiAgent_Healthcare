# deploy/Dockerfile.data-generator
# Production-ready Dockerfile for Healthcare Data Generator

FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Create non-root user for security
RUN groupadd -r healthcare && useradd -r -g healthcare healthcare


RUN pip install faker

# Copy data generation script
COPY data/generate_dataset.py .

# Switch to non-root user
USER healthcare

# Create volume for data persistence
VOLUME ["/app/data"]

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
  CMD curl --version || exit 1

# Run data generation
CMD ["python", "generate_dataset.py"]